{
  "build": {
    "dockerfile": "Containerfile"
  },
  "mounts": [
    "type=bind,source=${localEnv:HOME}/.ssh,target=/home/python/.ssh,readonly",
    "type=bind,source=${localEnv:HOME}/.gitconfig,target=/home/python/.gitconfig,readonly"
  ],
  "runArgs": [
    "--userns=keep-id:uid=1000,gid=1000"
  ],
  "containerUser": "python",
  "updateRemoteUserUID": true,
  "privileged": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "mhutchie.git-graph",
        "waderyan.gitblame",
        "streetsidesoftware.code-spell-checker",
        "hashicorp.hcl",
        "hashicorp.terraform",
        "ms-vscode.notepadplusplus-keybindings",
        "hediet.vscode-drawio"
      ]
    }
  }
}
